<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="text-center">
        <h2 class="margin-top-lg"><b>Codaisseur Forum</b></h2>
       <p>Start getting answers to your questions.</p>
    </div>
    <div class="devise-wrapper">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-group') do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
          </div>

          <div class="field">
            
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
          </div>

          <div class="actions">
            <%= f.submit "Sign in", class: 'btn btn-codaisseur pull-right' %>
          </div>
        <% end %>

        <%= link_to "I forgot my password", new_password_path(resource_name) %>
        <br>
        
    </div>
</div>
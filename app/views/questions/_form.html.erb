

<div class="row new-question">
<%= form_for :question, class: "form-group" , url: questions_path do |f| %>

<div class="field col-xs-4">
 <br><br>
  <%= f.collection_select :topic_id, Topic.all, :id, :title, {:label => "Choose topic"}, {:class => 'form-control'} %>
</div>

<div class="col-xs-8 text-right">
   <%= link_to 'Cancel', root_path, class: 'btn btn-default'  %>
 <%= f.submit class: 'btn btn-codaisseur' %>
    
</div>

<div class="col-xs-12">
 <br>
  <%= f.text_field :title, class: "form-control", placeholder: "Type a title for your question..." %>
</div>

 <div class="col-xs-12">
    <br>
  <%= f.text_area :body, class: "form-control", placeholder: "Add question details...", size: "40x15" %>
</div>
<div class="col-xs-12">
<br>
  <%= f.file_field :image_url %>
</div>


<% end %>
</div>
<%= form_for :question, url: questions_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :image_url %><br>
    <%= f.text_area :image_url %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

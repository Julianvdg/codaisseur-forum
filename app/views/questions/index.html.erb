<h1>Questions#index</h1>
<p>Find me in app/views/questions/index.html.erb</p>


<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<br>
<br>
<%= form_tag(questions_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Questions" %>
<%= submit_tag "Search" %>
<% end %>

<% if @questions.present? %>
  <% render "form" %>
<% else %>
  <p>There are no questions containing the term(s) <%= params[:search] %>.</p>
<% end %>

<br>
<br>

<table>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.user.email %></td>
        <td><%= question.created_at.to_s(:long) %></td>
        <td><%= question.answers.count %></td>
        <td><%= question.topic.title %></td>
        <td><%= link_to 'Show', question %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>
<br>
<br>

<%= will_paginate @questions %>
